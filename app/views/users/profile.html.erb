<%= render "layouts/header" %>

<div class="wrapper">
<!-- As Server: assign Guests to tables -->
<% if current_user.account == "server" %>
  <%= render "layouts/alltables" %>
<% end %>

<!-- As admin: -->
<% if current_user.account == "admin" %>
  <%= render "layouts/alltables" %>
  <%=  link_to :users, users_path %>
<!-- Create/Edit/Destroy inventory -->
<% end %>

<!-- As chef: -->
<% if current_user.account == "chef" %>
<!-- Display current tickets -->
<%= render "layouts/allorders" %>
<!-- Create/Edit/Destroy inventory -->
<% end %>

<%= button_to "Log Out", sessions_path, method: :delete %>
</div>
