<%= render 'layouts/header' %>
<div class="wrapper">
<!-- Create a Dish -->
<%= form_for @dish do |f| %>
  <%= f.label :dish %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :price %>
  <%= f.number_field :price %>
  <%= f.submit %>
<% end %>

<!-- Show and Remove and Edit Dish -->
<ul>
  <% @dishes.each do |dish| %>
    <li>
      <%= dish.name %>
      <%= dish.description %>
      $<%= dish.price %>
      <%= button_to "Edit Dish", edit_dish_path(dish.id), method: :get%>
      <%= button_to "Remove", dish_path(dish.id), method: :delete%>
    </li>
  <% end %>
</ul>
</div>
